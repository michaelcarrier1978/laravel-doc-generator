#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

// Load .env file manually and force it into environment
$envPath = __DIR__ . '/..';
$envFile = $envPath . '/.env';
if (file_exists($envFile)) {
    $lines = file($envFile, FILE_IGNORE_NEW_LINES | FILE_SKIP_EMPTY_LINES);
    foreach ($lines as $line) {
        if (strpos(trim($line), '#') === 0) continue;
        if (strpos($line, '=') !== false) {
            list($key, $value) = explode('=', $line, 2);
            $key = trim($key);
            $value = trim($value);
            $_ENV[$key] = $value;
            $_SERVER[$key] = $value;
            putenv("$key=$value");
        }
    }
} else {
    echo "Warning: .env file not found at: $envFile\n";
}

use Symfony\Component\Console\Application;
use Michaelcarrier\LaravelDocGenerator\Commands\GenerateControllerDocs;

$application = new Application('Laravel Docs Generator', '0.1.0');

$application->add(new GenerateControllerDocs());

$application->run();
#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use Symfony\Component\Console\Application;
use Michaelcarrier\LaravelDocGenerator\Commands\GenerateControllerDocs;
use Michaelcarrier\LaravelDocGenerator\Commands\TestConfluence;
use Michaelcarrier\LaravelDocGenerator\Commands\PublishToConfluence;


// Load environment variables
$dotenv = Dotenv\Dotenv::createImmutable(__DIR__ . '/..');
$dotenv->load();

$application = new Application('Laravel Doc Generator', '1.0.0');
$application->add(new GenerateControllerDocs());
$application->add(new TestConfluence());
$application->add(new PublishToConfluence());
$application->run();